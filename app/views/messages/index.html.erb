<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
</div>
<div class="panel-body">
    <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
    <% end %>
</div>

<%= form_for(@message) do |fx| %>
  <div class="form-group">
      <label for="message_name">名前：</label>
      <%= fx.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
  </div>
  <div class="form-group">
      <label for="message_body">内容：</label>
      <%= fx.text_area :body, class: "form-control", placeholder: "内容を入力してください" %>
  </div>

  <%= fx.submit class: "btn btn-sm btn-primary" %>
<% end %>