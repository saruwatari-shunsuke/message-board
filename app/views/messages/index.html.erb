<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            | <%= link_to "E", edit_message_path(message) %>
            <%= link_to "D", message, method: :delete, date: {confirm: '削除してもよろしいですか？'} %>
            <br>
        <% end %>
    </div>
</div>

<% #部分テンプレート %>
<%= render 'form' %>